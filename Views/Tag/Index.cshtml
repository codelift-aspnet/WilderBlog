@model BlogResult
@{
  ViewBag.Title = $"Tag: {ViewContext.RouteData.Values["tag"]} - Shawn Wildermuth's Rants and Raves";
  ViewBag.PageName = $"Stories Tagged with '{ViewContext.RouteData.Values["tag"]}'";
  ViewBag.PageBlurb = $"";
  ViewBag.PageImage = "/img/headers/search.jpg";
  ViewBag.ControllerName = "Tag";
}
@if (Model.Stories != null)
{
  <div class="row">
    <div class="col-lg-12">
      @Html.Partial("_Pager")
    </div>
  </div>

  @foreach (var story in Model.Stories)
  {
    @Html.Partial("_StoryBrief", story)
  }

  <div class="row">
    <div class="col-lg-12">
      @Html.Partial("_Pager")
    </div>
  </div>
}